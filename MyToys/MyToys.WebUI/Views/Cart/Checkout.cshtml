@model MyToys.Domain.Entities.Order

@{
    ViewBag.Title = "Szczegóły zamówienia";
}

<h2>Wysyłka</h2>
<p>Proszę podać swoje dane, a towar zostanie wysłany</p>

@using (Html.BeginForm())

{
    @Html.ValidationSummary()

    <div class="form-group">
        <label>Nazwisko:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})
    </div>

    <h3>Adres</h3>
    <div class="form-group">
        <label>Ulica:</label>
        @Html.TextBoxFor(x => x.Street, new { @class = "form-control"})
    </div>
    <div class="form-group">
        <label>Miasto:</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Kod pocztowy:</label>
        @Html.TextBoxFor(x => x.Zip, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Kraj:</label>
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
    </div>

    <h3>Dodatkowe opcje</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.GiftWrap)
            Zapakowane jako prezent
        </label>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Wyślij" />
    </div>
}

