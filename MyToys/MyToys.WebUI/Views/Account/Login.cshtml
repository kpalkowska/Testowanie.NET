@model MyToys.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Logowanie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel">
    <div class="panel-heading">
        <h3>Zaloguj się</h3>
    </div>
    <div class="panel-body">
        <p class="lead">Proszę o zalogowanie w celu wykonania czynności administracyjnych</p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Nazwa użytkownika:</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Hasło:</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            </div>
            <input type="submit" value="Zaloguj się" class="btn btn-primary" />
        }
    </div>
</div>

